<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div class="w-[25vw] bg-white px-20 py-10 rounded-[30px]">
    <h1
      class="text-3xl mb-10 font-semibold text-zinc-700 text-center leading-none tracking-tighter capitalize"
    >
      Create New Account.
    </h1>
    <form action="/register" method="post">
      <input
        class="border-2 rounded-md block w-full px-3 py-2 mt-2"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="border-2 rounded-md block w-full px-3 py-2 mt-2"
        type="text"
        name="fullname"
        placeholder="fullname"
      />
      <input
        class="border-2 rounded-md block w-full px-3 py-2 mt-2"
        type="email"
        name="email"
        placeholder="email"
      />
      <input
        class="border-2 rounded-md block w-full px-3 py-2 mt-2"
        type="number"
        name="contact"
        placeholder="contact"
      />
      <input
        class="border-2 rounded-md block w-full px-3 py-2 mt-2"
        type="password"
        name="password"
        placeholder="password"
      />

      <input
        class="border-2 block w-full px-3 py-2 mt-5 bg-red-600 text-white rounded-full"
        type="submit"
        value="Create New Account"
      />
      <p
        class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center"
      >
        By continuing, you agree to Pinterest's Terms of Service and acknowledge
        you've read our Privacy Policy. Notice at collection.
      </p>
    </form>
    <a
      href="/"
      class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full"
      >Login Existing Account</a
    >
  </div>
</div>
<% include ./partials/footer.ejs %>
